<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white" >

            <ImageView
                android:id="@+id/iv_show_cover_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/iv_show_cover_image"
                android:background="#F8F8F8" >

                <TextView
                    android:id="@+id/tv_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="72dp"
                    android:paddingTop="24dp"
                    android:paddingLeft="14dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/details_page_title_text"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_content_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_content_title"
                    android:paddingTop="8dp"
                    android:paddingLeft="14dp"
                    android:textSize="@dimen/details_page_show_text"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/clip_info_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_content_show"
                    android:paddingTop="8dp"
                    android:paddingLeft="14dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_content_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:textSize="@dimen/details_page_info_text" />

                    <TextView
                        android:id="@+id/tv_content_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/details_page_info_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/clip_info_container"
                    android:paddingTop="24dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="14dp"
                    android:textSize="@dimen/details_page_description_text"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_content_description"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="72dp"
                        android:background="#B2B2B2"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_more_from_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textSize="@dimen/details_page_more_from_text"
                        android:textColor="#FFFFFF"
                        android:background= "@color/colorPrimary"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>



</FrameLayout>
